
<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>aspnet-TCSA.V2-5cbb2f6a-8407-46ed-937c-1f93a9b4df27</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AspNet.Security.OAuth.GitHub" Version="8.0.0" />
    <PackageReference Include="Bogus" Version="35.5.0" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="8.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="8.0.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Octokit" Version="10.0.0" />
    <PackageReference Include="Octokit.Webhooks.AspNetCore" Version="2.2.1" />
    <PackageReference Include="Radzen.Blazor" Version="5.2.4" />
    <PackageReference Include="Serilog" Version="3.1.1" />
    <PackageReference Include="Seq.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Serilog.Sinks.Seq" Version="7.0.0" />
	<PackageReference Include="SendGrid" Version="9.29.3" />
	<PackageReference Include="Blazor.Bootstrap" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="wwwroot\tailwind\tailwind.css" />
  </ItemGroup>
  
  <Target Name="PostPublish" AfterTargets="ComputeFilesToPublish">
    <Exec Command="npm install" />
    <Exec Command="npx tailwind build ./wwwroot/tailwind/tailwind.css -o ./wwwroot/tailwind.css" />
  </Target>

</Project>
