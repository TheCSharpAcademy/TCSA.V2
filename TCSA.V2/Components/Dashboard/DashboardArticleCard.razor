@using TCSA.V2.Models
<div class="row horizontal-card horizontal-card-desktop shadow rounded-sm @Status">
    <div class="row g-0">
        <div class="col-md-1">
            <img src="img/@Article.IconUrl" class="img-fluid card-img" alt="...">
        </div>
        <div class="col-md-4">
            <p class="card-title-dashboard">@Article.Title</p>
            <p class="card-text"><small class="text-muted">Article</small></p>
        </div>
        <div class="col-md-4 text-center">
            @if (Status == "completed")
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                </svg>
                <p class="card-text-complete"><small>Completed</small></p>
            }
        </div>
        <div class="col-md-3">
            <a href="article/@Article.Id" class="btn view-articles-btn">View Article</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Status { get; set; }
    [Parameter] public Article Article { get; set; }
}
