@using TCSA.V2.Components.UI.SVGs
@using TCSA.V2.Models

<div class="row horizontal-card horizontal-card-desktop shadow rounded-sm d-flex align-items-center @Status">
    <div class="row g-0">
        <div class="col-md-1">
            <img src="img/Cards/@Project.IconUrl" class="img-fluid card-img" alt="...">
        </div>
        <div class="col-md-5">
            <p class="card-title-dashboard">@Project.Title</p>
            <p class="project-card-text">@Project.Description</p>
        </div>
        <div class="col-md-3 text-center">
            @if (Status == "completed")
            {
                <CheckCircleSVG />

                <p class="card-text-complete"><small>Completed</small></p>
            }
            else if (Status == "pending-review")
            {
                <PendingReviewSVG />
            }
        </div>
        <div class="col-md-3 d-flex align-items-center">
            <a href="project/@Project.Id" class="btn view-project-btn" target="_blank">View Project</a>
        </div>
    </div>
</div>

<div class="horizontal-card-mobile shadow rounded-3 @Status">
    <table>
        <tr>
            <th class="icon"><img src="img/@Project.IconUrl" class="img-fluid card-img" alt="..."></th>
            <th class="text-th">
                <p class="card-title-dashboard">@Project.Title</p>
                <p class="card-text"><small class="text-muted">Project</small></p>
            </th>
            <th class="button-th">
                <div class="col-sm-1 col-md-3 d-flex align-items-center">
                    <a href="project/@Project.Id" class="btn btn-outline-secondary shadow">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder2-open" viewBox="0 0 16 16">
                            <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v.64c.57.265.94.876.856 1.546l-.64 5.124A2.5 2.5 0 0 1 12.733 15H3.266a2.5 2.5 0 0 1-2.481-2.19l-.64-5.124A1.5 1.5 0 0 1 1 6.14V3.5zM2 6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3H2.5a.5.5 0 0 0-.5.5V6zm-.367 1a.5.5 0 0 0-.496.562l.64 5.124A1.5 1.5 0 0 0 3.266 14h9.468a1.5 1.5 0 0 0 1.489-1.314l.64-5.124A.5.5 0 0 0 14.367 7H1.633z" />
                        </svg>
                    </a>
                </div>
            </th>
        </tr>
    </table>
</div>

@code {
    [Parameter] public string Status { get; set; }
    [Parameter] public Project Project { get; set; }
}